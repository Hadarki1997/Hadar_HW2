<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Game">

    //------- Background init --------

    <ImageView
        android:id="@+id/panel_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B0EBF1" />


    //------- Lives Panel --------
    <ImageView
        android:id="@+id/engine1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_heart"
        />

    <ImageView
        android:id="@+id/engine2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/engine1"
        android:layout_toEndOf="@+id/engine1"
        android:src="@drawable/ic_heart"
        />

    <ImageView
        android:id="@+id/engine3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/engine1"
        android:layout_toEndOf="@+id/engine2"
        android:src="@drawable/ic_heart"
        />

    <ImageView
        android:id="@+id/engine4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/engine1"
        android:layout_toEndOf="@+id/engine3"
        android:src="@drawable/ic_heart"
        />

    <TextView
        android:id="@+id/panel_TXT_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/engine1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:text="0"
        android:textColor="@color/black"
        android:fontFamily="@font/sky"
        android:textSize="50dp"
         />

    //------- Game Panel --------
